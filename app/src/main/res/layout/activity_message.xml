<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageActivity">

    <include layout="@layout/title_message"/>


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
         >

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="待签收"
            android:textColor="@drawable/selector_tabcolor_my_order"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="处置中"
            android:textColor="@drawable/selector_tabcolor_my_order"
            android:textSize="13sp" />
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@drawable/selector_tabcolor_my_order"
            android:textSize="13sp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_infoMyCouponLine"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="@color/blue_tab" />
    </RelativeLayout>

    <cn.sibat.pushdemo.CustomViewPager
        android:id="@+id/vp_infoMyCoupon_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </cn.sibat.pushdemo.CustomViewPager>


</LinearLayout>