<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JingliActivity">

    <include layout="@layout/title_jingli"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/view_alert_bg_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="25dp"
                        android:background="@color/title_gradient_end" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/img_main_8" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="周边警力"
                        android:textSize="16sp" />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/view_alert_bg_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/img_user_demo3"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="车公庙派出所"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:text="刘警官（09281）"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="民警"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/img_main_14"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:textSize="12sp"
                            android:text="300M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/back"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:src="@mipmap/img_main_13"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/view_alert_bg_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/img_user_demo4"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="车公庙派出所"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:text="王警官（09527）"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="民警"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/img_main_14"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:textSize="12sp"
                            android:text="300M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/back"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:src="@mipmap/img_main_13"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>






            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>